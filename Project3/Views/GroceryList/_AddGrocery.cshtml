@model CreateGroceryItemVM

<form asp-action="AddGrocery" asp-controller="GroceryList" id="addGroceryForm">
    <div class="form-horizontal">
        <h4>Add Item</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="GroceryName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GroceryName" class="form-control" />
                <span asp-validation-for="GroceryName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GroceryAmount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GroceryAmount" class="form-control" />
                <span asp-validation-for="GroceryAmount" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" name="groceryListId" value="@Model.GroceryListId" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <input type="button" value="Cancel" id="cancelButton" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
